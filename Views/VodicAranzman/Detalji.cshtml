@model WebAranzmani.Models.AranzmanInfo
@{
    ViewBag.Title = "Detalji aranžmana (vodič)";

    // ✅ Normalizacija putanje za sliku
    var posterPath = Model.Poster;
    if (!string.IsNullOrEmpty(posterPath))
    {
        if (!posterPath.StartsWith("~/Content/Images"))
        {
            posterPath = "~/Content/Images/" + posterPath;
        }
    }
}

<style>
    :root {
        --c-deep: #0b2447;
        --c-mid: #0e7490;
        --c-sky: #22d3ee;
        --glass: rgba(255,255,255,.08);
        --stroke: rgba(255,255,255,.18);
        --text: #f8fafc;
        --text-dim: #cfe7f2;
    }

    body {
        background: linear-gradient(135deg, var(--c-deep), var(--c-mid));
        color: var(--text);
    }

    .card-custom {
        background: var(--glass);
        border: 1px solid var(--stroke);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 28px rgba(0,0,0,.25);
        padding: 22px;
    }

    h2 {
        font-weight: 900;
        color: #fff;
        margin-bottom: 1.2rem;
    }

    .status-pill {
        padding: .4rem 1rem;
        border-radius: 999px;
        font-weight: 800;
        font-size: .9rem;
    }

        .status-pill.active {
            background: #d1fae5;
            color: #065f46;
        }

        .status-pill.deleted {
            background: #fee2e2;
            color: #991b1b;
        }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 12px 18px;
        margin-bottom: 1rem;
    }

    .info-key {
        font-weight: 700;
        color: var(--text-dim);
    }

    .info-value {
        font-weight: 600;
        color: #fff;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 800;
        margin-top: 1rem;
        color: var(--c-sky);
    }

    .btn {
        border-radius: 10px;
        font-weight: 700;
        padding: .5rem 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(90deg,#0ea5e9,#22d3ee);
        color: #053b4c;
    }

    .btn-warning {
        background: linear-gradient(90deg,#d97706,#f59e0b);
        color: #2a1400;
    }

    .btn-danger {
        background: linear-gradient(90deg,#ef4444,#f97316);
        color: #fff;
    }

    .btn-secondary {
        background: #374151;
        color: #f9fafb;
    }
</style>

<div class="container my-4">
    <div class="card-custom">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>@Model.Naziv</h2>
            <span class="status-pill @(Model.Obrisano ? "deleted" : "active")">
                @(Model.Obrisano ? "OBRISAN" : "AKTIVAN")
            </span>
        </div>

        <!-- ✅ Slika aranžmana -->
        @if (!string.IsNullOrEmpty(Model.Poster))
        {
            <div class="mb-3 text-center">
                <img src="@Url.Content(posterPath)" alt="@Model.Naziv"
                     class="img-fluid rounded shadow" style="max-height:300px;" />
            </div>
        }

        <div class="info-grid">
            <div class="info-key">Početak:</div>
            <div class="info-value">@Model.DatumPocetka.ToShortDateString()</div>

            <div class="info-key">Kraj:</div>
            <div class="info-value">@Model.DatumZavrsetka.ToShortDateString()</div>

            <div class="info-key">Prevoz:</div>
            <div class="info-value">@Model.VrstaPrevoza</div>

            <div class="info-key">Paket:</div>
            <div class="info-value">@Model.Paket</div>

            <div class="info-key">Broj putnika:</div>
            <div class="info-value">@Model.BrojPutnika</div>
        </div>

        <div class="section-title">Opis</div>
        <p>@(string.IsNullOrWhiteSpace(Model.Opis) ? "—" : Model.Opis)</p>

        <div class="section-title">Plan putovanja</div>
        <p>@(string.IsNullOrWhiteSpace(Model.Plan) ? "—" : Model.Plan)</p>

        <div class="mt-4 d-flex gap-2">
            @Html.ActionLink("⬅️ Nazad", "Index", "VodicAranzman", null, new { @class = "btn btn-secondary" })
            @Html.ActionLink("✏️ Izmeni", "Izmeni", "VodicAranzman", new { id = Model.Sifra }, new { @class = "btn btn-warning" })
            @Html.ActionLink("🗑️ Obriši", "Obrisi", "VodicAranzman", new { id = Model.Sifra }, new { @class = "btn btn-danger", onclick = "return confirm('Sigurno brišeš?')" })
        </div>
    </div>
</div>
