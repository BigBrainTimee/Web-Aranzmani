@using WebAranzmani.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NisTravel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            @Html.ActionLink("NisTravel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>

                    @if (Session["Korisnik"] == null)
                    {
                        <li class="nav-item">@Html.ActionLink("Prijava", "Prijava", "Korisnik", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Registracija", "Registracija", "Korisnik", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        var user = (KorisnikInfo)Session["Korisnik"];

                        if (user.Uloga == Uloga.Turista)
                        {
                            <li class="nav-item">@Html.ActionLink("Moje rezervacije", "Index", "Rezervacija", null, new { @class = "nav-link" })</li>
                        }

                        if (user.Uloga == Uloga.Menadzer)
                        {
                            <li class="nav-item">@Html.ActionLink("Aranžmani", "Index", "VodicAranzman", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Smeštaji", "Index", "VodicSmestaj", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Rezervacije", "Index", "VodicRezervacija", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Komentari", "Index", "Komentar", null, new { @class = "nav-link" })</li>
                        }


                        if (user.Uloga == Uloga.Admin)
                        {
                            <li class="nav-item">@Html.ActionLink("Korisnici", "Users", "Admin", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Dodaj menadžera", "CreateManager", "Admin", null, new { @class = "nav-link" })</li>
                        }

                        <li class="nav-item">@Html.ActionLink("Profil", "Profil", "Korisnik", null, new { @class = "nav-link" })</li>
                        <li class="nav-item"><a class="nav-link text-danger" href="@Url.Action("Odjava", "Korisnik")">Odjava</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        <p>&copy; @DateTime.Now.Year - NisTravel | All rights reserved</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
