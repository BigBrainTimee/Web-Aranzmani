@model List<WebAranzmani.Models.KomentarInfo>

<div class="mt-3">
    <h5 class="fw-bold mb-3">💬 Komentari</h5>

    @if (Model != null && Model.Any(x => x.Prihvacen))
    {
        <div class="list-group shadow-sm rounded-3">
            @foreach (var k in Model.Where(x => x.Prihvacen))
            {
                <div class="list-group-item mb-3 p-3 rounded-3 shadow-sm" style="background: rgba(255,255,255,.06); border: 1px solid rgba(255,255,255,.15); color: #f8fafc;">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <strong>@k.Turista</strong>
                        <span class="text-warning fw-bold">@k.Ocena / 5 ★</span>
                    </div>
                    <div class="small text-muted">@k.SmestajNaziv</div>
                    <p class="mt-2 mb-0">@k.Sadrzaj</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">Nema odobrenih komentara za ovaj smeštaj.</p>
    }
</div>
