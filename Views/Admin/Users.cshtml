@model IEnumerable<WebAranzmani.Models.KorisnikInfo>
@{
    ViewBag.Title = "Korisnici";
}

<style>
    :root {
        --bg: #0f172a;
        --panel: rgba(255,255,255,.05);
        --stroke: rgba(255,255,255,.15);
        --text: #e2e8f0;
        --accent1: #7c3aed;
        --accent2: #3b82f6;
        --danger: #ef4444;
        --primary: #2563eb;
    }

    body {
        background: linear-gradient(135deg, #1e293b, #0f172a);
        color: var(--text);
    }

    h2 {
        font-weight: 800;
        margin-bottom: 25px;
        background: linear-gradient(90deg, #fff, #c4b5fd, #93c5fd);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .search-panel {
        margin-bottom: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        background: var(--panel);
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid var(--stroke);
    }

        .search-panel input,
        .search-panel select {
            padding: 8px 12px;
            border-radius: 8px;
            border: 1px solid var(--stroke);
            background: rgba(255,255,255,.08);
            color: var(--text);
            flex: 1;
            min-width: 140px;
        }

        .search-panel button {
            background: var(--primary);
            border: none;
            border-radius: 8px;
            color: #fff;
            font-weight: 600;
            padding: 8px 16px;
            cursor: pointer;
            transition: background 0.2s ease-in-out;
        }

            .search-panel button:hover {
                background: #1d4ed8;
            }

    .table-wrap {
        background: var(--panel);
        border: 1px solid var(--stroke);
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 10px 28px rgba(0,0,0,.25);
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: linear-gradient(90deg, var(--accent1), var(--accent2));
        color: #fff;
    }

    th, td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid var(--stroke);
    }

    tbody tr:hover {
        background: rgba(255,255,255,.06);
    }

    .badge {
        padding: 4px 10px;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .badge-admin {
        background: linear-gradient(90deg,#7c3aed,#a78bfa);
        color: #fff;
    }

    .badge-menadzer {
        background: linear-gradient(90deg,#3b82f6,#60a5fa);
        color: #fff;
    }

    .badge-turista {
        background: linear-gradient(90deg,#22c55e,#4ade80);
        color: #fff;
    }

    .btn-danger {
        background: var(--danger);
        border: none;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        padding: 6px 12px;
        box-shadow: 0 6px 14px rgba(0,0,0,.25);
    }
</style>

<h2>Korisnici</h2>

<!-- Forma za pretragu -->
@using (Html.BeginForm("Lista", "Korisnik", FormMethod.Get))
{
    <div class="search-panel">
        <input type="text" name="pretragaIme" placeholder="Ime" value="@Request["pretragaIme"]" />
        <input type="text" name="pretragaPrezime" placeholder="Prezime" value="@Request["pretragaPrezime"]" />
        <input type="text" name="pretragaKorisnicko" placeholder="Korisničko ime" value="@Request["pretragaKorisnicko"]" />
        <select name="pretragaUloga">
            <option value="">--Sve uloge--</option>
            <option value="Admin" @(Request["pretragaUloga"] == "Admin" ? "selected" : "")>Admin</option>
            <option value="Menadzer" @(Request["pretragaUloga"] == "Menadzer" ? "selected" : "")>Menadžer</option>
            <option value="Turista" @(Request["pretragaUloga"] == "Turista" ? "selected" : "")>Turista</option>
        </select>
        <button type="submit">Pretraži</button>
    </div>
}

<div class="table-wrap">
    <table>
        <thead>
            <tr>
                <th>Korisničko ime</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Uloga</th>
                <th>Akcija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in Model)
            {
                <tr>
                    <td>@k.KorisnickoIme</td>
                    <td>@k.Ime</td>
                    <td>@k.Prezime</td>
                    <td>
                        @if (k.Uloga.ToString() == "Admin")
                        {
                            <span class="badge badge-admin">Admin</span>
                        }
                        else if (k.Uloga.ToString() == "Menadzer")
                        {
                            <span class="badge badge-menadzer">Menadžer</span>
                        }
                        else
                        {
                            <span class="badge badge-turista">Turista</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Obriši", "DeleteUser", new { username = k.KorisnickoIme }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
