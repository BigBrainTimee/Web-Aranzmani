@model WebAranzmani.Models.SmestajnaJedinicaInfo
@using WebAranzmani.Models
@{
    var smestaj = ViewBag.Smestaj as WebAranzmani.Models.SmestajInfo;
    ViewBag.Title = "Nova jedinica";
}

<style>
    :root {
        --c-deep: #0b2447;
        --c-mid: #0e7490;
        --c-sky: #22d3ee;
        --glass: rgba(255,255,255,.08);
        --stroke: rgba(255,255,255,.18);
        --text: #f8fafc;
        --text-dim: #cfe7f2;
    }

    body {
        min-height: 100vh;
        background: radial-gradient(1200px 600px at -10% -10%, rgba(255,255,255,.06), transparent 60%), radial-gradient(900px 600px at 110% 10%, rgba(255,255,255,.05), transparent 50%), linear-gradient(135deg, var(--c-deep) 0%, #0a3a5a 35%, var(--c-mid) 68%, var(--c-sky) 110%);
        color: var(--text);
    }

    .card {
        background: var(--glass);
        border: 1px solid var(--stroke);
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,.22);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        color: var(--text);
        overflow: hidden;
    }

    .card-hero {
        background: linear-gradient(135deg, #0e7490 0%, #22d3ee 100%);
        color: #062a3a;
        padding: 20px;
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,.28);
        background: rgba(255,255,255,.07);
        color: #fff;
    }

        .form-control::placeholder {
            color: #0b2447;
        }

    .btn-primary {
        background: linear-gradient(90deg,#0ea5e9,#22d3ee);
        border: none;
        font-weight: bold;
        color: #053b4c;
        border-radius: 12px;
        padding: 8px 20px;
    }

    .btn-secondary {
        border: 1px solid rgba(255,255,255,.5);
        background: transparent;
        color: #eaf7ff;
        border-radius: 12px;
        padding: 8px 20px;
    }
</style>

<div class="container my-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-hero">
            <h2 class="mb-1">Nova jedinica</h2>
            <div>Smeštaj: <strong>@(smestaj?.Naziv ?? "—")</strong></div>
        </div>
        <div class="card-body p-4">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            @using (Html.BeginForm("Kreiraj", "VodicJedinica", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.SmestajId)

                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Kapacitet (broj gostiju)</label>
                        @Html.TextBoxFor(m => m.BrojGostiju,
                            new { @class = "form-control", type = "number", min = "1", required = "required", placeholder = "npr. 4" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold d-block">Kućni ljubimci</label>
                        <div class="form-check form-switch">
                            @Html.CheckBoxFor(m => m.Ljubimci, new { @class = "form-check-input", id = "petsSwitch" })
                            <label class="form-check-label" for="petsSwitch">Dozvoljeni su kućni ljubimci</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Cena (EUR)</label>
                        @Html.TextBoxFor(m => m.Cena,
                            new { @class = "form-control", type = "number", step = "0.01", min = "0", required = "required", placeholder = "npr. 7999.00" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Status</label>
                        @Html.EnumDropDownListFor(m => m.Status, new { @class = "form-select", required = "required" })
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Sačuvaj</button>
                    @Html.ActionLink("Nazad", "Index", "VodicJedinica",
                        new { smestajId = smestaj?.SmestajId },
                        new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
