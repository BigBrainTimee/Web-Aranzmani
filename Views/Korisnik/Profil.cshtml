@model WebAranzmani.Models.KorisnikInfo
@{
    ViewBag.Title = "Profil";
}

<style>
    body {
        background: linear-gradient(135deg, #1e293b, #0f172a);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
        padding: 2rem;
    }

    .profile-card {
        max-width: 700px;
        margin: 0 auto;
        background: rgba(255,255,255,.07);
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,.15);
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,.4);
        color: #f8fafc;
    }

    h2 {
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(90deg,#3b82f6,#9333ea);
        -webkit-background-clip: text;
        color: transparent;
    }

    .form-control {
        border-radius: 10px;
        background: rgba(255,255,255,.1);
        border: 1px solid rgba(255,255,255,.25);
        color: #fff;
    }

        .form-control:focus {
            border-color: #9333ea;
            box-shadow: 0 0 0 3px rgba(147,51,234,.35);
        }

    .form-select {
        border-radius: 10px;
        background: rgba(255,255,255,.1);
        border: 1px solid rgba(255,255,255,.25);
        color: #fff;
    }

        .form-select option {
            color: #000;
        }

    .btn-primary {
        background: linear-gradient(90deg,#3b82f6,#60a5fa);
        border: none;
        border-radius: 12px;
        font-weight: 700;
        box-shadow: 0 8px 24px rgba(0,0,0,.3);
    }

    .alert {
        padding: 10px 14px;
        border-radius: 12px;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .alert-success {
        background: rgba(34,197,94,.15);
        color: #4ade80;
    }

    .alert-danger {
        background: rgba(239,68,68,.15);
        color: #f87171;
    }
</style>

<div class="profile-card">
    <h2>Moj profil</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Profil", "Korisnik", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-md-6">
                @Html.LabelFor(m => m.KorisnickoIme)
                @Html.TextBoxFor(m => m.KorisnickoIme, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.Ime)
                @Html.TextBoxFor(m => m.Ime, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.Prezime)
                @Html.TextBoxFor(m => m.Prezime, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.Label("Lozinka (opciono)")
                @Html.PasswordFor(m => m.Lozinka, new { @class = "form-control" })
            </div>
            <div class="col-md-6">
                @Html.LabelFor(m => m.DatumRodjenja, "Datum rođenja")
                @Html.TextBoxFor(m => m.DatumRodjenja,
                    new { @class = "form-control", type = "date",
                        value = Model.DatumRodjenja.ToString("yyyy-MM-dd")
                    })



            </div>


            <div class="col-md-6">
                @Html.LabelFor(m => m.Pol, "Pol")
                @Html.DropDownListFor(m => m.Pol,
                    new SelectList(new[] { "Muški", "Ženski" }, Model.Pol),
                    "-- Izaberi pol --",
                    new { @class = "form-select" })
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary w-100">Sačuvaj izmene</button>
        </div>
    }
</div>
